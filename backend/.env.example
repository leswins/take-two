# Backend Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# APPLICATION
# ============================================
APP_NAME="Sports Commentary Analyzer"
DEBUG=false
API_V1_PREFIX="/api/v1"

# ============================================
# DATABASE - Supabase PostgreSQL
# ============================================
# Get this from Supabase Dashboard > Settings > Database > Connection string
# Use the "Transaction" pooler connection string for serverless environments
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres:password@localhost:5432/sports_commentary

# ============================================
# REDIS - Upstash
# ============================================
# Get this from Upstash Console > Redis > Details
# Format: rediss://default:[password]@[endpoint]:6379
REDIS_URL=redis://localhost:6379/0

# ============================================
# FILE UPLOADS
# ============================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# ============================================
# CORS - Allowed Origins
# ============================================
# Comma-separated list of allowed origins
# For production, set to your Vercel frontend URL
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# OPTIONAL: HuggingFace Token (for private models or increased rate limits)
# ============================================
# HUGGINGFACE_TOKEN=hf_xxxxx

# ============================================
# OPTIONAL: Sentry for error tracking
# ============================================
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
